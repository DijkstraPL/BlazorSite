@model KPK_CalcSite.ViewModels.SnowLoadsViewModel
@{
    ViewBag.Title = "Monopitch Roof";
}

<h2>Monopitch Roof</h2>

<div class="submit-container">
    @using (Html.BeginForm("CalculateMonopitchRoof", "SnowLoads"))
    {
    <div class="row">

        <div class="col-sm-6">
            <div class="snow-load-case">
                <a href="@Url.Action("Calculator", "SnowLoads")">
                    <img class="snow-load-link" src="~/Content/Images/SnowLoads/Monopitch.png" alt="Monopitch Roof" />
                </a>
            </div>
            @*<div id="dvCategoryResults">
                @{Html.RenderPartial("_MonopitchRoofResults", Model.SnowLoadMonopitchRoof.MonopitchRoof);}
            </div>*@
        </div>
        <div class="col-sm-6">

            @Html.Partial("_BuildingSite", Model, new ViewDataDictionary() { { "Exceptional", false } })

            <div class="form-group">
                @Html.LabelFor(m => m.SnowLoadMonopitchRoof.MonopitchRoof.Slope)
                @Html.TextBoxFor(m => m.SnowLoadMonopitchRoof.MonopitchRoof.Slope,
               new { @class = "form-control", @placeholder = "Enter slope in degrees", Value = "",
                   @type = "number", @step = "1" })
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(m => m.SnowLoadMonopitchRoof.MonopitchRoof.SnowFences) @Html.LabelFor(m => m.SnowLoadMonopitchRoof.MonopitchRoof.SnowFences, "Snow Fences")
            </div>
            <div class="form-group">
                <button type="submit" name="calculate" id="calculate" value="calculate" class="btn btn-info pull-right" required="required">Calculate</button>
            </div>
        </div>
    </div>
    }

</div>
@Scripts.Render("~/Scripts/snow.loads.js")


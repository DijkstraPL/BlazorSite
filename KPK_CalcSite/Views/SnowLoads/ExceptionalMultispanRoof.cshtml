@model KPK_CalcSite.ViewModels.SnowLoadsViewModel
@{
    ViewBag.Title = "ExceptionalMultispanRoof";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Exceptional Multispan Roof</h2>

<div class="submit-container">

    @using (Html.BeginForm("CalculateExceptionalMultispanRoof", "SnowLoads"))
    {
        <div class="row">

            <div class="col-sm-6">
                    <a href="@Url.Action("Calculator", "SnowLoads")">
                <div class="snow-load-case">
                        <img class="snow-load-link" src="~/Content/Images/SnowLoads/ExceptionalMultispanRoof.png" alt="Exceptional Multispan Roof" />
                </div>
                    </a>
            </div>
            <div class="col-sm-6">

                @Html.Partial("_BuildingSite", Model, new ViewDataDictionary() { { "Exceptional", true } })

                <div class="form-group">
                    @Html.LabelFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.LeftDriftLength, "Left drift length")
                    @Html.TextBoxFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.LeftDriftLength,
                   new { @class = "form-control", @placeholder = "Enter left drift length in meters", Value = "",
                       @type = "number", @step = ".1" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.RightDriftLength, "Right drift length")
                    @Html.TextBoxFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.RightDriftLength,
                   new { @class = "form-control", @placeholder = "Enter right drift length in meters", Value = "",
                       @type = "number", @step = ".1" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.HeightInTheLowestPart, "Height in the lowest part")
                    @Html.TextBoxFor(m => m.ExceptionalSnowLoadMultispanRoof.ExceptionalMultispanRoof.HeightInTheLowestPart,
                   new { @class = "form-control", @placeholder = "Enter height in meters", Value = "",
                       @type = "number", @step = ".1" })
                </div>

                <div class="form-group">
                    <button type="submit" name="calculate" id="calculate" value="calculate" class="btn btn-info pull-right" required="required">Calculate</button>
                </div>
            </div>
        </div>
    }

</div>
@Scripts.Render("~/Scripts/snow.loads.js")
